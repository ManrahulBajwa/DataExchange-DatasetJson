{
  "$ref": "#/definitions/DatasetJson",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Data": {
      "additionalProperties": false,
      "properties": {
        "itemGroupData": {
          "additionalProperties": {
            "$ref": "#/definitions/ItemGroupData"
          },
          "type": "object"
        },
        "metaDataVersionOID": {
          "type": "string"
        },
        "studyOID": {
          "type": "string"
        }
      },
      "required": [
        "studyOID",
        "metaDataVersionOID",
        "itemGroupData"
      ],
      "type": "object"
    },
    "DatasetJson": {
      "additionalProperties": false,
      "properties": {
        "clinicalData": {
          "$ref": "#/definitions/Data"
        },
        "referenceData": {
          "$ref": "#/definitions/Data"
        }
      },
      "type": "object"
    },
    "ItemDescription": {
      "additionalProperties": false,
      "description": "Definition for Item in the Dataset",
      "properties": {
        "OID": {
          "description": "Unique Identifier for Item.",
          "type": "string"
        },
        "label": {
          "description": "Label for Item",
          "type": "string"
        },
        "name": {
          "description": "Name for Item.",
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/ItemType",
          "description": "Item data type"
        }
      },
      "required": [
        "OID",
        "name"
      ],
      "type": "object"
    },
    "ItemGroupData": {
      "additionalProperties": false,
      "properties": {
        "itemData": {
          "items": {
            "items": {
              "type": [
                "string",
                "number",
                "null"
              ]
            },
            "type": "array"
          },
          "type": "array"
        },
        "items": {
          "items": {
            "$ref": "#/definitions/ItemDescription"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "records": {
          "type": "number"
        }
      },
      "required": [
        "records",
        "name",
        "label",
        "items",
        "itemData"
      ],
      "type": "object"
    },
    "ItemType": {
      "description": "Enumerated set of Permissible Item Types",
      "enum": [
        "string",
        "integer",
        "float",
        "double"
      ],
      "type": "string"
    }
  }
}